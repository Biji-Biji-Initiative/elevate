{
  "name": "elevate-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.12.4",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm -F web dev\" \"pnpm -F admin dev\"",
    "dev:web": "pnpm -F web dev",
    "dev:admin": "pnpm -F admin dev",
    "build": "pnpm -r build",
    "build:web": "pnpm -F web build",
    "build:admin": "pnpm -F admin build",
    "build:analyze": "pnpm -F web build:analyze && pnpm -F admin build:analyze",
    "analyze:bundles": "node scripts/analyze-bundles.js",
    "start": "concurrently \"pnpm -F web start\" \"pnpm -F admin start\"",
    "setup": "./scripts/setup.sh",
    "setup:clerk": "./scripts/setup-clerk.sh",
    "setup:clerk-auto": "node scripts/clerk-auto-setup.js",
    "setup:clerk-env": "node scripts/clerk-auto-setup.js",
    "setup:cache": "./scripts/setup-remote-cache.sh",
    "db:setup": "./scripts/db-setup.sh",
    "db:deploy": "./scripts/db-deploy.sh",
    "db:generate": "prisma generate --schema=packages/db/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=packages/db/schema.prisma",
    "db:migrate:prod": "prisma migrate deploy --schema=packages/db/schema.prisma",
    "db:push": "prisma db push --schema=packages/db/schema.prisma",
    "db:seed": "ts-node packages/db/seed.ts",
    "db:reset": "prisma migrate reset --schema=packages/db/schema.prisma --force",
    "db:studio": "prisma studio --schema=packages/db/schema.prisma",
    "db:init": "pnpm db:push && pnpm db:seed",
    "db:check-drift": "./scripts/db/check-drift.sh",
    "db:generate-sql": "./scripts/db/generate-migrations.sh",
    "db:sync-supabase": "./scripts/db/sync-supabase.sh",
    "db:test-rls": "vitest --config packages/db/vitest.config.ts run packages/db/tests/rls.test.ts",
    "db:docs": "node scripts/generate-schema-docs.js",
    "deploy": "./scripts/deploy.sh",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:prod": "./scripts/deploy.sh production",
    "deploy:vercel": "node scripts/vercel-deploy.js",
    "deploy:vercel-shell": "./deploy-vercel.sh",
    "env:check": "./scripts/env-check.sh",
    "type-check": "pnpm -r type-check",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "lint:apps": "pnpm -F web lint && pnpm -F elevate-admin lint",
    "lint:packages": "eslint packages/ --max-warnings 0",
    "lint:check": "eslint . --max-warnings 0 --format=compact",
    "test": "turbo run test",
    "test:watch": "turbo run test -- --watch",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "emails:dev": "pnpm -F @elevate/emails dev",
    "openapi:generate": "pnpm -F @elevate/openapi generate:all",
    "openapi:dev": "pnpm -F @elevate/openapi dev",
    "ui:add": "npx shadcn@latest add --config components.json",
    "ui:add:web": "cd apps/web && npx shadcn@latest add --config components.json",
    "ui:add:admin": "cd apps/admin && npx shadcn@latest add --config components.json",
    "ui:init": "npx shadcn@latest init --config components.json",
    "ui:build": "pnpm -F @elevate/ui build",
    "ui:dev": "pnpm -F @elevate/ui build --watch",
    "ui:lint": "pnpm -F @elevate/ui lint",
    "ui:type-check": "pnpm -F @elevate/ui type-check"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@eslint/js": "^9.17.0",
    "@next/eslint-plugin-next": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitest/coverage-v8": "^2.0.5",
    "concurrently": "^8.2.2",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-turbo": "^2.5.6",
    "next": "15.0.0",
    "openapi-typescript": "^7.9.1",
    "prisma": "^5.19.0",
    "swagger-ui-dist": "^5.28.0",
    "swagger-ui-react": "^5.28.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.16.0",
    "vite-tsconfig-paths": "^5.1.3",
    "vitest": "^2.0.5",
    "zod": "^4.1.5"
  },
  "dependencies": {
    "svix": "^1.75.0"
  },
  "pnpm": {
    "overrides": {
      "react": "18.3.1",
      "react-dom": "18.3.1",
      "next": "15.0.0",
      "@types/react": "18.3.18",
      "@types/react-dom": "18.3.5"
    }
  },
  "resolutions": {
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "next": "15.0.0",
    "@types/react": "18.3.18",
    "@types/react-dom": "18.3.5"
  }
}
