{
  "name": "elevate-monorepo",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@10.12.4",
  "workspaces": [
    "apps/*",
    "packages/*",
    "fixtures/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm -F web dev\" \"pnpm -F elevate-admin dev\"",
    "dev:web": "pnpm -F web dev",
    "dev:admin": "pnpm -F elevate-admin dev",
    "build": "pnpm -r build",
    "build:clean": "./scripts/clean-build.sh",
    "build:verify": "node scripts/build-policy-check.js --verify",
    "build:check": "node scripts/build-policy-check.js",
    "build:setup-policy": "./scripts/setup-build-policy.sh",
    "build:web": "pnpm -F web build",
    "build:admin": "pnpm -F elevate-admin build",
    "build:analyze": "pnpm -F web build:analyze && pnpm -F elevate-admin build:analyze",
    "analyze:bundles": "node scripts/analyze-bundles.js",
    "start": "concurrently \"pnpm -F web start\" \"pnpm -F elevate-admin start\"",
    "setup": "./scripts/setup.sh",
    "setup:clerk": "./scripts/setup-clerk.sh",
    "setup:clerk-auto": "node scripts/clerk-auto-setup.js",
    "setup:clerk-env": "node scripts/clerk-auto-setup.js",
    "setup:cache": "./scripts/setup-remote-cache.sh",
    "cache:status": "./scripts/cache-status.sh",
    "cache:clean": "./scripts/cache-clean.sh",
    "cache:analyze": "./scripts/cache-status.sh --json",
    "cache:optimize": "./scripts/cache-clean.sh --optimize",
    "cache:benchmark": "./scripts/measure-cache-performance.sh",
    "db:setup": "./scripts/db-setup.sh",
    "db:deploy": "./scripts/db-deploy.sh",
    "db:generate": "prisma generate --schema=packages/db/schema.prisma",
    "db:migrate": "prisma migrate dev --schema=packages/db/schema.prisma",
    "db:migrate:prod": "prisma migrate deploy --schema=packages/db/schema.prisma",
    "db:push": "prisma db push --schema=packages/db/schema.prisma",
    "db:seed": "ts-node packages/db/seed.ts",
    "db:reset": "prisma migrate reset --schema=packages/db/schema.prisma --force",
    "db:studio": "prisma studio --schema=packages/db/schema.prisma",
    "db:init": "pnpm db:push && pnpm db:seed",
    "db:check-drift": "./scripts/db/check-drift.sh",
    "db:generate-sql": "./scripts/db/generate-migrations.sh",
    "db:sync-supabase": "./scripts/db/sync-supabase.sh",
    "db:test-rls": "vitest --config packages/db/vitest.config.ts run packages/db/tests/rls.test.ts",
    "db:docs": "node scripts/generate-schema-docs.js",
    "db:refresh-views": "node scripts/refresh-views.js",
    "deploy": "./scripts/deploy-apps.sh",
    "deploy:staging": "./scripts/deploy-apps.sh staging",
    "deploy:prod": "./scripts/deploy-apps.sh production",
    "deploy:web": "./scripts/deploy-web.sh",
    "deploy:web:staging": "./scripts/deploy-web.sh staging",
    "deploy:web:prod": "./scripts/deploy-web.sh production",
    "deploy:admin": "./scripts/deploy-admin.sh",
    "deploy:admin:staging": "./scripts/deploy-admin.sh staging",
    "deploy:admin:prod": "./scripts/deploy-admin.sh production",
    "deploy:verify": "node scripts/verify-vercel-config.js",
    "deploy:vercel": "node scripts/vercel-deploy.js",
    "deploy:vercel-shell": "./deploy-vercel.sh",
    "env:check": "./scripts/env-check.sh",
    "type-check": "tsc --noEmit --project tsconfig.check.json",
    "typecheck:build": "tsc -b tsconfig.json",
    "type-safety:check": "node scripts/check-type-safety.js",
    "type-safety:strict": "node scripts/check-type-safety.js --strict",
    "type-safety:help": "node scripts/check-type-safety.js --best-practices",
    "lint": "pnpm run lint:packages && pnpm run lint:apps",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs --fix",
    "lint:apps": "pnpm -F web lint && pnpm -F elevate-admin lint",
    "lint:packages": "eslint packages/ --max-warnings 0",
    "lint:check": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs --max-warnings 0 --format=compact",
    "test": "vitest --config tests/vitest.config.ts",
    "test:watch": "vitest --config tests/vitest.config.ts --watch",
    "test:coverage": "vitest --config tests/vitest.config.ts --coverage",
    "test:integration": "vitest --config tests/vitest.config.ts tests/integration",
    "test:performance": "vitest --config tests/vitest.config.ts tests/performance",
    "test:unit": "turbo run test",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:db": "vitest --config packages/db/vitest.config.ts",
    "test:security": "vitest --config packages/security/vitest.config.ts",
    "test:auth": "vitest --config packages/auth/vitest.config.ts",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "emails:dev": "pnpm -F @elevate/emails dev",
    "openapi:generate": "pnpm -F @elevate/openapi generate:all",
    "openapi:dev": "pnpm -F @elevate/openapi dev",
    "ui:add": "npx shadcn@latest add --config components.json",
    "ui:add:web": "cd apps/web && npx shadcn@latest add --config components.json",
    "ui:add:admin": "cd apps/admin && npx shadcn@latest add --config components.json",
    "ui:init": "npx shadcn@latest init --config components.json",
    "ui:build": "pnpm -F @elevate/ui build",
    "ui:dev": "pnpm -F @elevate/ui build --watch",
    "ui:lint": "pnpm -F @elevate/ui lint",
    "ui:type-check": "pnpm -F @elevate/ui type-check",
    "verify:exports": "node scripts/validate-exports.mjs",
    "verify:consumer": "pnpm -C fixtures/consumer-node run test && pnpm -C fixtures/consumer-next15 run type-check && pnpm -C fixtures/consumer-next15 run build",
    "verify:secrets": "node scripts/scan-secrets.js",
    "api:extract": "turbo run api:extract",
    "api:check": "turbo run api:check",
    "ci": "pnpm run build:check && pnpm run typecheck:build && pnpm run verify:secrets && pnpm run build:clean && pnpm run verify:exports && pnpm run verify:consumer && pnpm run api:extract && pnpm run lint:check && pnpm run test:coverage",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "prerelease": "changeset pre enter",
    "prerelease:exit": "changeset pre exit"
  },
  "devDependencies": {
    "@asteasolutions/zod-to-openapi": "^7.3.4",
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.34.0",
    "@microsoft/api-extractor": "^7.45.1",
    "@next/eslint-plugin-next": "^15.5.2",
    "@playwright/test": "^1.40.0",
    "@types/node": "^22.10.5",
    "concurrently": "^9.1.4",
    "eslint": "^9.0.0",
    "eslint-config-next": "15.5.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.2",
    "eslint-plugin-turbo": "^2.5.6",
    "glob": "^10.3.10",
    "next": "15.5.2",
    "openapi-typescript": "^7.9.1",
    "playwright": "^1.40.0",
    "prisma": "^6.15.0",
    "swagger-ui-dist": "^5.28.0",
    "swagger-ui-react": "^5.28.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "typescript-eslint": "^7.13.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4",
    "zod": "^3.25.76"
  },
  "dependencies": {
    "@sentry/nextjs": "^10.9.0",
    "@sentry/node": "^10.9.0",
    "@sentry/profiling-node": "^10.9.0",
    "@sentry/react": "^10.9.0",
    "next": "15.5.2",
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "svix": "^1.75.0"
  },
  "pnpm": {
    "overrides": {
      "next": "15.5.2",
      "react": "19.1.1",
      "react-dom": "19.1.1",
      "typescript": "5.9.2",
      "eslint": "^9.0.0",
      "prisma": "6.15.0",
      "@prisma/client": "6.15.0",
      "esbuild": ">=0.25.0",
      "prismjs": ">=1.30.0"
    },
    "peerDependencyRules": {
      "allowedVersions": {
        "react": "19.1.1",
        "react-dom": "19.1.1",
        "next": "15.5.2"
      }
    }
  }
}