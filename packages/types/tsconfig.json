{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "preserve",
    "composite": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo",
    "src/__tests__/**",
    "src/**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
