{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    "rootDir": "src",
    "stripInternal": true,
    "sourceMap": true,
    "inlineSources": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "paths": {
      "@elevate/types": ["../types/dist/types"],
      "@elevate/types/*": ["../types/dist/types/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["src/__tests__/**"],
  "references": [{ "path": "../types/tsconfig.build.json" }]
}
