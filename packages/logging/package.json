{
  "name": "@elevate/logging",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/js/index.js"
    },
    "./client": {
      "types": "./dist/types/client.d.ts",
      "import": "./dist/js/client.js"
    },
    "./server": {
      "types": "./dist/types/server.d.ts",
      "import": "./dist/js/server.js"
    }
  },
  "main": "./dist/js/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist coverage",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --max-warnings 0",
    "lint:fix": "eslint src --fix"
  },
  "dependencies": {
    "pino": "^9.5.0",
    "pino-pretty": "^11.3.0",
    "@sentry/node": "^10.9.0"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "tsup": "^8.3.5",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "sideEffects": false,
  "engines": { "node": ">=20.11" },
  "files": [
    "dist/js",
    "dist/types",
    "README.md",
    "LICENSE",
    "dist/js/**/*.map"
  ],
  "typesVersions": {
    "*": {
      "*": ["dist/types/*"]
    }
  }
}
