{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    "stripInternal": true,
    "sourceMap": true,
    "inlineSources": true,
    "rootDir": "src",
    "jsx": "react",
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "paths": {}
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"],
  "references": [
    { "path": "../types/tsconfig.build.json" },
    { "path": "../logging/tsconfig.build.json" },
    { "path": "../forms/tsconfig.build.json" }
  ]
}
