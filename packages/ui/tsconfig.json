{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "types": [
      "node"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "jsx": "preserve",
    "composite": true,
    "declaration": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    ".turbo"
  ],
  "references": [
    { "path": "../types" },
    { "path": "../forms" },
    { "path": "../logging" }
  ]
}
