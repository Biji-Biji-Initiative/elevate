{
  "name": "@elevate/ui",
  "version": "0.1.0",
  "private": true,
  "sideEffects": [
    "*.css"
  ],
  "engines": {
    "node": ">=20.11"
  },
  "files": [
    "dist/js",
    "dist/types",
    "README.md",
    "LICENSE",
    "dist/js/**/*.map"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/js/index.js"
    },
    "./FileUpload": {
      "types": "./dist/types/FileUpload.d.ts",
      "default": "./dist/js/FileUpload.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/js/index.js",
  "types": "./dist/types/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "dist/types/*"
      ]
    }
  },
  "scripts": {
    "build": "pnpm run build:types && tsup --config tsup.config.ts",
    "build:types": "tsc -b --force tsconfig.build.json",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs --fix",
    "type-check": "tsc --noEmit",
    "api:extract": "../../node_modules/.bin/api-extractor run --local",
    "api:check": "../../node_modules/.bin/api-extractor run"
  },
  "dependencies": {
    "@elevate/types": "workspace:*",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-dialog": "^1.1.3",
    "@radix-ui/react-select": "^2.1.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "react-hook-form": "^7.62.0"
  },
  "peerDependencies": {
    "react": "^18.2.0 || ^19.1.1",
    "react-dom": "^18.2.0 || ^19.1.1",
    "tailwindcss": ">=3.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@types/node": "^20.14.0",
    "typescript": "^5.9.2",
    "tsup": "^8.3.7"
  },
  "publishConfig": {
    "access": "restricted",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/elevate.git",
    "directory": "packages/ui"
  }
}
