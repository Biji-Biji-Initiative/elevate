{
  "name": "@elevate/ui",
  "version": "0.1.0",
  "private": true,
  "sideEffects": [
    "./dist/styles/globals.css"
  ],
  "engines": {
    "node": ">=20.11"
  },
  "files": [
    "dist/js",
    "dist/types",
    "dist/styles",
    "tailwind-preset.js",
    "README.md",
    "LICENSE",
    "dist/js/**/*.map"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/js/index.js"
    },
    "./styles/globals.css": "./dist/styles/globals.css",
    "./blocks": {
      "types": "./dist/types/blocks/index.d.ts",
      "import": "./dist/js/blocks/index.js"
    },
    "./blocks/sections": {
      "types": "./dist/types/blocks/sections/index.d.ts",
      "import": "./dist/js/blocks/sections/index.js"
    },
    "./next": {
      "types": "./dist/types/next/index.d.ts",
      "import": "./dist/js/next/index.js"
    },
    "./feedback": {
      "types": "./dist/types/feedback/index.d.ts",
      "import": "./dist/js/feedback/index.js"
    },
    "./lib/utils": {
      "types": "./dist/types/lib/utils.d.ts",
      "import": "./dist/js/lib/utils.js"
    },
    "./package.json": "./package.json",
    "./tailwind-preset": "./tailwind-preset.js"
  },
  "main": "./dist/js/index.js",
  "types": "./dist/types/index.d.ts",
  "typesVersions": {
    "*": {
      "*": [
        "dist/types/*"
      ]
    }
  },
  "scripts": {
    "build": "pnpm run build:types && tsup --config tsup.config.ts",
    "build:types": "tsc -b tsconfig.build.json",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs --fix",
    "type-check": "tsc --noEmit",
    "api:extract": "../../node_modules/.bin/api-extractor run --local",
    "api:check": "../../node_modules/.bin/api-extractor run",
    "check:duplicates": "node scripts/check-ui-duplicates.js",
    "check:monorepo-duplicates": "node scripts/check-monorepo-duplicates.mjs",
    "migrate:imports": "node scripts/migrate-imports.cjs",
    "validate:exports": "node scripts/validate-exports.js",
    "ci:validate": "pnpm run check:duplicates && pnpm run check:monorepo-duplicates && pnpm run validate:exports && node scripts/validate-registry-drift.mjs"
  },
  "dependencies": {
    "@elevate/forms": "workspace:*",
    "@elevate/types": "workspace:*",
    "@radix-ui/react-dialog": "^1.1.3",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-select": "^2.1.3",
    "@radix-ui/react-slot": "^1.1.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.469.0",
    "react-hook-form": "^7.62.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "peerDependencies": {
    "@clerk/nextjs": "^6.14.0",
    "@elevate/security": "workspace:*",
    "@sentry/nextjs": "^8.0.0",
    "next": "^15.5.2",
    "react": "^18.2.0 || ^19.1.1",
    "react-dom": "^18.2.0 || ^19.1.1",
    "tailwindcss": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "@clerk/nextjs": {
      "optional": true
    },
    "@elevate/security": {
      "optional": true
    },
    "@sentry/nextjs": {
      "optional": true
    },
    "next": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "fast-glob": "^3.3.3",
    "tsup": "^8.3.7",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "restricted",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/elevate.git",
    "directory": "packages/ui"
  }
}
