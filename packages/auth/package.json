{
  "name": "@elevate/auth",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/js/index.js"
    },
    "./context": {
      "types": "./dist/types/context.d.ts",
      "default": "./dist/js/context.js"
    },
    "./server-helpers": {
      "types": "./dist/types/server-helpers.d.ts",
      "default": "./dist/js/server-helpers.js"
    },
    "./withRole": {
      "types": "./dist/types/withRole.d.ts",
      "default": "./dist/js/withRole.js"
    },
    "./types": {
      "types": "./dist/types/types.d.ts",
      "default": "./dist/js/types.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/js/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "build": "pnpm run build:types && tsup --config tsup.config.ts",
    "clean": "rm -rf dist",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest",
    "build:types": "tsc -b --force tsconfig.build.json",
    "api:extract": "../../node_modules/.bin/api-extractor run --local",
    "api:check": "../../node_modules/.bin/api-extractor run"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.31.8",
    "@elevate/types": "workspace:*",
    "@elevate/logging": "workspace:*",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "next": "^14.0.0 || ^15.5.2",
    "react": "^18.2.0 || ^19.1.1",
    "react-dom": "^18.2.0 || ^19.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^19.1.12",
    "next": "15.5.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tsup": "^8.3.7",
    "typescript": "^5.9.2"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.11"
  },
  "files": [
    "dist/js",
    "dist/types",
    "README.md",
    "LICENSE",
    "dist/js/**/*.map"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "dist/types/*"
      ]
    }
  },
  "publishConfig": {
    "access": "restricted",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/elevate.git",
    "directory": "packages/auth"
  }
}
