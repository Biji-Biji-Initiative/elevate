{
  "name": "@elevate/auth",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./context": {
      "types": "./context.tsx",
      "default": "./context.tsx"
    },
    "./server-helpers": {
      "types": "./server-helpers.ts",
      "default": "./server-helpers.ts"
    },
    "./withRole": {
      "types": "./withRole.ts",
      "default": "./withRole.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "clean": "rm -rf dist",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.37.8",
    "@elevate/types": "workspace:*",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "next": "^14.0.0 || ^15.5.2",
    "react": "^18.2.0 || ^19.1.1",
    "react-dom": "^18.2.0 || ^19.1.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "@types/react": "^19.1.12",
    "next": "15.5.2",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "tsup": "^8.3.7",
    "typescript": "^5.9.2"
  }
}