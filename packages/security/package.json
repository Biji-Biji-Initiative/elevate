{
  "name": "@elevate/security",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/js/index.js"
    },
    "./rate-limiter": {
      "types": "./dist/types/rate-limiter.d.ts",
      "default": "./dist/js/rate-limiter.js"
    },
    "./csp": {
      "types": "./dist/types/csp.d.ts",
      "default": "./dist/js/csp.js"
    },
    "./security-middleware": {
      "types": "./dist/types/security-middleware.d.ts",
      "default": "./dist/js/security-middleware.js"
    },
    "./csp-hooks": {
      "types": "./dist/types/csp-hooks.d.ts",
      "default": "./dist/js/csp-hooks.js"
    },
    "./sanitizer": {
      "types": "./dist/types/sanitizer.d.ts",
      "default": "./dist/js/sanitizer.js"
    },
    "./csrf": {
      "types": "./dist/types/csrf.d.ts",
      "default": "./dist/js/csrf.js"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/js/index.js",
  "types": "./dist/types/index.d.ts",
  "scripts": {
    "build": "pnpm run build:types && tsup --config tsup.config.ts",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "build:types": "tsc -b --force tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx,.mjs,.cjs --fix",
    "api:extract": "../../node_modules/.bin/api-extractor run --local",
    "api:check": "../../node_modules/.bin/api-extractor run"
  },
  "peerDependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.11",
    "tsup": "^8.3.7",
    "typescript": "^5.9.2"
  },
  "optionalDependencies": {
    "@upstash/redis": "^1.31.9"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=20.11"
  },
  "files": [
    "dist/js",
    "dist/types",
    "README.md",
    "LICENSE",
    "dist/js/**/*.map"
  ],
  "typesVersions": {
    "*": {
      "*": [
        "dist/types/*"
      ]
    }
  },
  "publishConfig": {
    "access": "restricted",
    "provenance": true,
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/elevate.git",
    "directory": "packages/security"
  }
}
