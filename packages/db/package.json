{
  "name": "@elevate/db",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./client": {
      "types": "./client.ts",
      "default": "./client.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format esm --dts --clean",
    "clean": "rm -rf dist",
    "postinstall": "prisma generate --schema=./schema.prisma",
    "test": "vitest --run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@prisma/client": "^6.15.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "typescript": "^5.9.2",
    "prisma": "^6.15.0",
    "tsup": "^8.3.7"
  }
}
