{
  "name": "@elevate/logic",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./scoring": {
      "types": "./dist/scoring.d.ts",
      "default": "./dist/scoring.js"
    },
    "./badges": {
      "types": "./dist/badges.d.ts",
      "default": "./dist/badges.js"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts src/scoring.ts src/badges.ts --format esm --dts --clean",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@elevate/db": "workspace:*",
    "@elevate/types": "workspace:*",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "typescript": "^5.5.4",
    "tsup": "^8.0.2"
  }
}