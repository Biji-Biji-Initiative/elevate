{
  "name": "@elevate/openapi",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./spec": {
      "types": "./dist/spec.d.ts",
      "default": "./dist/spec.js"
    },
    "./spec.json": "./dist/openapi.json",
    "./sdk": {
      "default": "./dist/sdk.ts"
    },
    "./client": {
      "default": "./dist/client.ts"
    },
    "./examples": {
      "default": "./dist/examples.ts"
    }
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist/**/*",
    "openapi.json"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/spec.ts --format esm --clean",
    "generate": "tsx src/generator.ts",
    "generate:spec": "tsx src/generator.ts",
    "generate:client": "openapi-typescript dist/openapi.json -o dist/client.ts",
    "generate:sdk": "tsx src/client-generator.ts",
    "generate:all": "pnpm generate && pnpm generate:sdk",
    "dev": "tsx watch src/generator.ts",
    "clean": "rm -rf dist",
    "lint": "eslint . --max-warnings 0",
    "lint:fix": "eslint . --fix",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@asteasolutions/zod-to-openapi": "^8.1.0",
    "@elevate/types": "workspace:*",
    "zod": "^4.1.5"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "openapi-typescript": "^7.9.1",
    "tsup": "^8.0.2",
    "tsx": "^4.19.2",
    "typescript": "^5.5.4"
  }
}