{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    "rootDir": "src",
    "stripInternal": true,
    "sourceMap": true,
    "inlineSources": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    ".react-email/**",
    "src/__tests__/**",
    "src/**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ]
}
