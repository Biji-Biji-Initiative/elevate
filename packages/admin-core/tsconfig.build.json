{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "noEmit": false,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "declarationDir": "dist/types",
    "rootDir": "src",
    "stripInternal": true,
    "sourceMap": true,
    "inlineSources": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "exactOptionalPropertyTypes": false,
    "paths": {
      "@elevate/openapi/client": ["../openapi/dist/types/client.d.ts"],
      "@elevate/types": ["../types/dist/types/index.d.ts"],
      "@elevate/http": ["../http/dist/types/index.d.ts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "src/__tests__/**",
    "src/**/__tests__/**",
    "**/*.test.ts",
    "**/*.test.tsx"
  ],
  "references": [
    { "path": "../openapi/tsconfig.build.json" },
    { "path": "../types/tsconfig.build.json" },
    { "path": "../http/tsconfig.build.json" }
  ]
}
