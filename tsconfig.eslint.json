{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": true
  },
  "include": [
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "tests/**/*.ts",
    "tests/**/*.tsx",
    "scripts/**/*.js",
    "scripts/**/*.mjs",
    "scripts/**/*.ts",
    "scripts/**/*.cjs",
    "playwright.config.ts",
    "fixtures/**/*.ts",
    "fixtures/**/*.tsx",
    "tsup.base.ts"
  ]
}
