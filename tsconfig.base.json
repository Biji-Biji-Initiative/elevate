{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "verbatimModuleSyntax": true,
    "strict": true,
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "useUnknownInCatchVariables": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@elevate/db": ["packages/db/src/index.ts"],
      "@elevate/db/*": ["packages/db/src/*"],
      "@elevate/auth": ["packages/auth/src/index.ts"],
      "@elevate/auth/*": ["packages/auth/src/*"],
      "@elevate/storage": ["packages/storage/src/index.ts"],
      "@elevate/storage/*": ["packages/storage/src/*"],
      "@elevate/logic": ["packages/logic/src/index.ts"],
      "@elevate/logic/*": ["packages/logic/src/*"],
      "@elevate/config": ["packages/config/src/index.ts"],
      "@elevate/config/*": ["packages/config/src/*"],
      "@elevate/ui": ["packages/ui/src/index.ts"],
      "@elevate/ui/*": ["packages/ui/src/*"],
      "@elevate/security": ["packages/security/src/index.ts"],
      "@elevate/security/*": ["packages/security/src/*"],
      "@elevate/types": ["packages/types/src/index.ts"],
      "@elevate/types/*": ["packages/types/src/*"],
      "@elevate/http": ["packages/http/src/index.ts"],
      "@elevate/http/*": ["packages/http/src/*"],
      "@elevate/logging": ["packages/logging/src/index.ts"],
      "@elevate/logging/*": ["packages/logging/src/*"],
      "@elevate/emails": ["packages/emails/src/index.ts"],
      "@elevate/emails/*": ["packages/emails/src/*"],
      "@elevate/integrations": ["packages/integrations/src/index.ts"],
      "@elevate/integrations/*": ["packages/integrations/src/*"],
      "@elevate/openapi": ["packages/openapi/src/index.ts"],
      "@elevate/openapi/*": ["packages/openapi/src/*"],
      "@elevate/forms": ["packages/forms/src/index.ts"],
      "@elevate/forms/*": ["packages/forms/src/*"],
      "@elevate/utils": ["packages/utils/src/index.ts"],
      "@elevate/utils/*": ["packages/utils/src/*"],
      "@elevate/admin-core": ["packages/admin-core/src/index.ts"],
      "@elevate/admin-core/*": ["packages/admin-core/src/*"],
      "@elevate/app-services": ["packages/app-services/src/index.ts"],
      "@elevate/app-services/*": ["packages/app-services/src/*"]
    }
  }
}
