{
  "name": "elevate-admin",
  "buildCommand": "cd ../.. && pnpm turbo run build --filter=elevate-admin",
  "installCommand": "cd ../.. && pnpm install --frozen-lockfile && pnpm db:generate",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "ignoreCommand": "git diff --quiet HEAD^ HEAD .",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-App-Name",
          "value": "elevate-admin"
        }
      ]
    }
  ]
}