{
  "name": "elevate-admin",
  "buildCommand": "cd ../.. && pnpm turbo run build --filter=elevate-admin",
  "installCommand": "pnpm install --frozen-lockfile",
  "outputDirectory": ".next",
  "framework": "nextjs",
  "functions": {
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-App-Name",
          "value": "elevate-admin"
        }
      ]
    }
  ]
}