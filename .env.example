# =============================================================================
# MS Elevate LEAPS Tracker - Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in the values
# SECURITY WARNING: Never commit actual secrets to version control

# =============================================================================
# DATABASE - Required for all environments
# =============================================================================
# For local development with Docker Compose (recommended):
DATABASE_URL=postgresql://postgres:password@localhost:5432/elevate_leaps
# For Supabase or other hosted PostgreSQL:
# DATABASE_URL=postgresql://user:password@hostname:5432/database_name

# =============================================================================
# AUTHENTICATION - Clerk (Required)
# =============================================================================
# Get these from https://dashboard.clerk.com/
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-publishable-key
CLERK_SECRET_KEY=sk_test_your-secret-key
CLERK_WEBHOOK_SECRET=whsec_your-webhook-secret

# =============================================================================
# FILE STORAGE - Supabase (Required for web app)
# =============================================================================
# Get these from https://supabase.com/dashboard/project/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# =============================================================================
# INTEGRATIONS - Kajabi (Required for production)
# =============================================================================
# Webhook secret for validating incoming requests (minimum 16 characters)
KAJABI_WEBHOOK_SECRET=your-secure-webhook-secret-min-16-chars

# API credentials for creating contacts (get from Kajabi Admin)
KAJABI_API_KEY=your-kajabi-api-key
KAJABI_CLIENT_SECRET=your-kajabi-client-secret

# Base URL for Kajabi API (default uses academy.mereka.my)
KAJABI_BASE_URL=https://academy.mereka.my/api

# Optional: Alternative to KAJABI_BASE_URL (supports bare hostname)
# KAJABI_SITE=https://academy.mereka.my/api

# Comma-separated Learn completion tags (lowercased). Defaults to two-course model.
KAJABI_LEARN_TAGS=elevate-ai-1-completed,elevate-ai-2-completed

# Numeric offer ID for granting access to courses (QA Test API)
KAJABI_OFFER_ID=2150602564

# Optional: Human-readable offer name (for documentation)
KAJABI_OFFER_NAME=QA Test API

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Public URL for the application (used in emails, redirects, etc.)
NEXT_PUBLIC_SITE_URL=https://leaps.mereka.org

# Node environment (development|production|test)
NODE_ENV=development

# =============================================================================
# EMAIL SERVICE - Resend (Optional)
# =============================================================================
# Get API key from https://resend.com/api-keys
RESEND_API_KEY=re_your-api-key
FROM_EMAIL=MS Elevate <noreply@leaps.mereka.org>
REPLY_TO_EMAIL=support@leaps.mereka.org

# =============================================================================
# SECURITY & OPERATIONS (Production only)
# =============================================================================
# Secret for protecting cron job endpoints
CRON_SECRET=your-secure-cron-secret

# Rate limiting configuration (requests per minute)
RATE_LIMIT_RPM=60
WEBHOOK_RATE_LIMIT_RPM=120

# =============================================================================
# AI SERVICES (Optional)
# =============================================================================
# OpenAI API key for AI-powered features
OPENAI_API_KEY=sk-your-openai-key

# =============================================================================
# DEVELOPMENT & SEEDING (Development only)
# =============================================================================
# Default admin user for seeding database
SEED_ADMIN_ID=demo-admin-1
SEED_ADMIN_EMAIL=admin@leaps.mereka.org
SEED_ADMIN_NAME=Admin User
SEED_ADMIN_HANDLE=admin_user

# Enable debug logging
DEBUG=false

# =============================================================================
# DEPLOYMENT SETTINGS (Production only)
# =============================================================================
# Vercel environment variables (auto-populated by Vercel)
# VERCEL=1
# VERCEL_ENV=production
# VERCEL_URL=your-app.vercel.app

# Database connection pool settings
DATABASE_POOL_MAX=10
DATABASE_POOL_TIMEOUT=30000

# =============================================================================
# TURBO REMOTE CACHE (Optional)
# =============================================================================
# Token for Vercel Remote Cache - speeds up builds across CI and team
# Get from https://vercel.com/account/tokens (scope: Turborepo Remote Cache)
TURBO_TOKEN=your-turbo-cache-token

# =============================================================================
# MONITORING & ANALYTICS (Optional)
# =============================================================================
# Sentry DSN for error tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Analytics service keys
ANALYTICS_API_KEY=your-analytics-key
