{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.mts",
    "**/*.cts",
    "**/*.js",
    "**/*.mjs",
    "**/*.cjs"
  ],
  "exclude": [
    "node_modules",
    ".next",
    "dist",
    "build",
    "**/.turbo",
    "**/coverage",
    "**/*.md",
    "**/*.mdx",
    "docs/**/*",
    "*.md"
  ],
  "references": [
    {
      "path": "./apps/web"
    },
    {
      "path": "./apps/admin"
    },
    {
      "path": "./packages/ui"
    },
    {
      "path": "./packages/types"
    },
    {
      "path": "./packages/config"
    },
    {
      "path": "./packages/auth"
    },
    {
      "path": "./packages/emails"
    },
    {
      "path": "./packages/logic"
    },
    {
      "path": "./packages/openapi"
    },
    {
      "path": "./packages/storage"
    },
    {
      "path": "./packages/integrations"
    },
    {
      "path": "./packages/db"
    }
  ]
}