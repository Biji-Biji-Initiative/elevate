{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "signature": true
  },
  "daemon": true,
  "tasks": {
    "type-check": {
      "outputs": ["packages/*/*.tsbuildinfo"],
      "cache": true,
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json",
        "tsconfig.*.json"
      ]
    },
    "build:types": {
      "dependsOn": ["^type-check"],
      "outputs": ["packages/*/dist/types/**"],
      "cache": true,
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json",
        "tsconfig.*.json"
      ]
    },
    "build:js": {
      "dependsOn": ["build:types"],
      "outputs": ["packages/*/dist/js/**"],
      "cache": true,
      "inputs": ["src/**/*", "tsup.config.ts", "package.json"]
    },
    "build": {
      "dependsOn": ["build:js"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "cache": true,
      "persistent": true,
      "inputs": [
        "src/**/*",
        "public/**/*",
        "next.config.*",
        "package.json",
        "tailwind.config.*",
        "postcss.config.*"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "inputs": ["src/**/*", ".eslintrc.*", "eslint.config.*", "package.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": ["src/**/*", "tests/**/*", "*.config.*", "package.json"]
    },
    "api:extract": {
      "dependsOn": ["build:types"],
      "outputs": ["**/*.api.md"],
      "cache": true
    },
    "api:check": {
      "dependsOn": ["build:types"],
      "outputs": [],
      "cache": true
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "CI",
    // Vercel build context
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "VERCEL_GIT_COMMIT_SHA",
    "NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA",
    // Build analysis toggles
    "ANALYZE",
    // Public client envs that affect bundles
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "NEXT_PUBLIC_SITE_URL",
    // Turbo cloud cache auth (optional)
    "TURBO_TOKEN",
    "TURBO_TEAM",
    // Server/runtime envs used by applications and packages
    "DATABASE_URL",
    "TEST_DATABASE_URL",
    "DIRECT_URL",
    "CLERK_SECRET_KEY",
    "CLERK_WEBHOOK_SECRET",
    "SUPABASE_SERVICE_ROLE_KEY",
    "KAJABI_WEBHOOK_SECRET",
    "KAJABI_LEARN_TAGS",
    "KAJABI_API_KEY",
    "KAJABI_CLIENT_SECRET",
    "KAJABI_BASE_URL",
    "KAJABI_SITE",
    "RESEND_API_KEY",
    "FROM_EMAIL",
    "REPLY_TO_EMAIL",
    "CRON_SECRET",
    "NEXT_RUNTIME",
    "ENABLE_INTERNAL_ENDPOINTS",
    "INTERNAL_METRICS_TOKEN",
    "SENTRY_DSN",
    // Logging and DB tunables
    "DB_LOG_LEVEL",
    "DB_LOG_QUERY_PARAMS",
    "DB_LOG_DURATION",
    "DB_LOG_PERFORMANCE",
    "DB_MAX_QUERY_LOG_LENGTH",
    "DB_LOGGING",
    "LOG_LEVEL",
    "LOG_PRETTY",
    "LOG_REDACT",
    "LOG_NAME",
    // Rate limiting & service integration
    "UPSTASH_REDIS_REST_URL",
    "UPSTASH_REDIS_REST_TOKEN",
    "AWS_LAMBDA_FUNCTION_NAME",
    "FUNCTIONS_RUNTIME",
    "RATE_LIMIT_LOG_ENABLED",
    "WEBHOOK_RATE_LIMIT_RPM",
    "ADMIN_RATE_LIMIT_RPM",
    "FILE_UPLOAD_RATE_LIMIT_RPM",
    "SUBMISSION_RATE_LIMIT_RPM",
    "AUTH_RATE_LIMIT_PER_15MIN",
    "PUBLIC_API_RATE_LIMIT_RPM",
    // Security tools
    "VAULT_MASTER_PASSWORD",
    "VAULT_OLD_PASSWORD",
    "VAULT_NEW_PASSWORD",
    // Misc
    "USER",
    // Kajabi integration
    "KAJABI_OFFER_ID",
    "KAJABI_OFFER_NAME",
    "ALLOW_UNSIGNED_KAJABI_WEBHOOK",
    "AV_SCAN_ENABLED"
  ]
}
