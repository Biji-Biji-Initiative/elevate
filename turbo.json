{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "signature": true
  },
  "daemon": true,
  "tasks": {
    "type-check": {
      "outputs": ["packages/*/*.tsbuildinfo"],
      "cache": true,
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json",
        "tsconfig.*.json"
      ]
    },
    "build:types": {
      "dependsOn": ["^type-check"],
      "outputs": ["packages/*/dist/types/**"],
      "cache": true,
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json",
        "tsconfig.*.json"
      ]
    },
    "build:js": {
      "dependsOn": ["build:types"],
      "outputs": ["packages/*/dist/js/**"],
      "cache": true,
      "inputs": ["src/**/*", "tsup.config.ts", "package.json"]
    },
    "build": {
      "dependsOn": ["^build", "build:js"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "cache": true,
      "inputs": [
        "src/**/*",
        "public/**/*",
        "next.config.*",
        "package.json",
        "tailwind.config.*",
        "postcss.config.*"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "inputs": ["src/**/*", ".eslintrc.*", "eslint.config.*", "package.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": ["src/**/*", "tests/**/*", "*.config.*", "package.json"]
    },
    "api:extract": {
      "dependsOn": ["build:types"],
      "outputs": ["**/*.api.md"],
      "cache": true
    },
    "api:check": {
      "dependsOn": ["build:types"],
      "outputs": [],
      "cache": true
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "VERCEL_GIT_COMMIT_SHA",
    "NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA",
    "ANALYZE",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "NEXT_PUBLIC_SITE_URL",
    "NEXT_PUBLIC_KAJABI_PORTAL_URL",
    "TURBO_TOKEN",
    "TURBO_TEAM",
    // Server/runtime envs used by applications and packages
    "DATABASE_URL",
    "TEST_DATABASE_URL",
    "DIRECT_URL",
    "CLERK_SECRET_KEY",
    "CLERK_WEBHOOK_SECRET",
    "SUPABASE_SERVICE_ROLE_KEY",
    "KAJABI_WEBHOOK_SECRET",
    "KAJABI_LEARN_TAGS",
    "KAJABI_API_KEY",
    "KAJABI_CLIENT_SECRET",
    "KAJABI_BASE_URL",
    "KAJABI_OFFER_ID",
    "KAJABI_OFFER_NAME",
    "RESEND_API_KEY",
    "FROM_EMAIL",
    "REPLY_TO_EMAIL",
    "CRON_SECRET",
    "NEXT_RUNTIME",
    "ENABLE_INTERNAL_ENDPOINTS",
    "INTERNAL_METRICS_TOKEN",
    "ALLOW_UNSIGNED_KAJABI_WEBHOOK",
    // Observability/monitoring (optional)
    "SENTRY_DSN",
    // Admin analytics config
    "ANALYTICS_POINTS_BUCKETS",
    "ANALYTICS_POINTS_QUANTILES",
    // Logging config
    "LOG_LEVEL",
    "LOG_PRETTY",
    "LOG_REDACT",
    "LOG_NAME",
    // Database logging toggles
    "DB_LOG_LEVEL",
    "DB_LOG_QUERY_PARAMS",
    "DB_LOG_DURATION",
    "DB_LOG_PERFORMANCE",
    "DB_MAX_QUERY_LOG_LENGTH",
    "DB_LOGGING",
    // Storage / AV scan toggle
    "AV_SCAN_ENABLED",
    // Integrations
    "KAJABI_SITE",
    // Client flags
    "NEXT_PUBLIC_ENABLE_API_DOCS",
    // Admin dev helpers
    "ADMIN_DEV_BYPASS_USER_IDS"
  ]
}
