{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "signature": true
  },
  "tasks": {
    "typecheck": {
      "outputs": ["packages/*/tsconfig.tsbuildinfo", "**/*.tsbuildinfo"],
      "cache": true
    },
    "build:types": {
      "dependsOn": ["^typecheck"],
      "outputs": ["packages/*/dist/types/**", "dist/types/**"],
      "cache": true
    },
    "build:js": {
      "dependsOn": ["build:types"],
      "outputs": ["packages/*/dist/js/**", "dist/js/**"],
      "cache": true
    },
    "build": {
      "dependsOn": ["build:js"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true
    },
    "api:extract": {
      "dependsOn": ["build:types"],
      "outputs": ["**/*.api.md"],
      "cache": true
    },
    "api:check": {
      "dependsOn": ["build:types"],
      "outputs": [],
      "cache": true
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "VERCEL_ENV",
    "VERCEL_GIT_COMMIT_SHA",
    "ANALYZE",
    "SUPABASE_URL",
    "SUPABASE_ANON_KEY",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "NEXT_PUBLIC_SITE_URL",
    "TURBO_TOKEN",
    "TURBO_TEAM",
    "CI"
  ]
}
