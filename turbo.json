{
  "$schema": "https://turbo.build/schema.json",
  "remoteCache": {
    "signature": true
  },
  "daemon": true,
  "tasks": {
    "type-check": {
      "outputs": ["packages/*/*.tsbuildinfo"],
      "cache": true,
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json",
        "tsconfig.*.json"
      ]
    },
    "build:types": {
      "dependsOn": ["^type-check"],
      "outputs": ["packages/*/dist/types/**"],
      "cache": true,
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json",
        "tsconfig.*.json"
      ]
    },
    "build:js": {
      "dependsOn": ["build:types"],
      "outputs": ["packages/*/dist/js/**"],
      "cache": true,
      "inputs": ["src/**/*", "tsup.config.ts", "package.json"]
    },
    "build": {
      "dependsOn": ["build:js"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "cache": true,
      "persistent": true,
      "inputs": [
        "src/**/*",
        "public/**/*",
        "next.config.*",
        "package.json",
        "tailwind.config.*",
        "postcss.config.*"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "inputs": ["src/**/*", ".eslintrc.*", "eslint.config.*", "package.json"]
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "cache": true,
      "inputs": ["src/**/*", "tests/**/*", "*.config.*", "package.json"]
    },
    "api:extract": {
      "dependsOn": ["build:types"],
      "outputs": ["**/*.api.md"],
      "cache": true
    },
    "api:check": {
      "dependsOn": ["build:types"],
      "outputs": [],
      "cache": true
    }
  },
  "globalEnv": [
    "NODE_ENV",
    "CI",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "VERCEL_GIT_COMMIT_SHA",
    "NEXT_PUBLIC_VERCEL_GIT_COMMIT_SHA",
    "ANALYZE",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "NEXT_PUBLIC_SUPABASE_URL",
    "NEXT_PUBLIC_SUPABASE_ANON_KEY",
    "NEXT_PUBLIC_SITE_URL",
    "NEXT_PUBLIC_KAJABI_PORTAL_URL",
    "TURBO_TOKEN",
    "TURBO_TEAM"
  ]
}
