{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "typecheck": {
      "outputs": ["packages/*/tsconfig.tsbuildinfo", "**/*.tsbuildinfo"]
    },
    "build:types": {
      "dependsOn": ["^typecheck"],
      "outputs": ["packages/*/dist/types/**", "dist/types/**"]
    },
    "build:js": {
      "dependsOn": ["build:types"],
      "outputs": ["packages/*/dist/js/**", "dist/js/**"]
    },
    "build": {
      "dependsOn": ["build:js"],
      "outputs": ["dist/**"]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "api:extract": {
      "dependsOn": ["build:types"],
      "outputs": ["**/*.api.md"]
    },
    "api:check": {
      "dependsOn": ["build:types"],
      "outputs": []
    }
  }
  ,
  "globalEnv": [
    "DATABASE_URL",
    "NODE_ENV",
    "VERCEL_ENV",
    "VERCEL_GIT_COMMIT_SHA",
    "ANALYZE",
    "CRON_SECRET",
    "CLERK_WEBHOOK_SECRET",
    "KAJABI_WEBHOOK_SECRET",
    "SUPABASE_URL",
    "SUPABASE_SERVICE_ROLE_KEY",
    "SUPABASE_ANON_KEY",
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY",
    "CLERK_SECRET_KEY",
    "NEXT_PUBLIC_SITE_URL",
    "CLERK_SIGN_IN_URL",
    "CLERK_SIGN_UP_URL",
    "CLERK_AFTER_SIGN_IN_URL",
    "CLERK_AFTER_SIGN_UP_URL",
    "NEXTAUTH_SECRET",
    "NEXTAUTH_URL",
    "WEBHOOK_SECRET",
    "TURBO_TOKEN",
    "TURBO_TEAM",
    "CI"
  ]
}
